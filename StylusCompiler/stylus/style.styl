boldOrange = #FF835B

html
	color #323232
	background-color white

body
	max-width 800px
	margin auto
	margin-top 50px
	font-family Source Sans Pro

.arabic
	font-family Noto Kufi Arabic
	&.left
		line-height 2.2em
		text-align right
		font-size 0.8em
		padding-right 8px
	b
		font-weight 600
		color boldOrange

.english
	font-family Source Sans Pro
	&.right
		line-height 1.6em
		font-size 1em
		padding-left 8px
	b
		font-weight 600
		color boldOrange

.main-head
	height 150px

.vertical-head-photo
	text-align center

.image-whole-collumn
	width 60%

.centered-titles
	text-align center

.name-h1
	font-weight 300
	font-size 2em
	&.arabic
		font-size 1.2em

.vertal-center
	padding-top 75px


.flex-container
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;

.flex-item
	flex 1
	zoom: 1
	letter-spacing: normal;
	word-spacing: normal;
	vertical-align: top;
	text-rendering: auto;

.center-image
	text-align center


/*Testimonials*/
.testimonial-container
	margin-top 50px

.testimonial-face-item
	padding 5px
	img
		width 100%
	&.inactive
		opacity 0.4
/*Starting testimonial face*/
.testimonial-description
	text-align center
	.name-h1
		&.english
			font-weight 200
			font-size 3.2em
			margin-bottom -15px
		&.arabic
			font-size 1.8em
	.testimonial-quote
		position relative
		.english
			font-size 1.4em
			font-weight 200
			line-height 1.5em
		.arabic
			font-size 1.2em
		.quote
			position absolute
			font-size 12em
			z-index -10
			color #DDDDDD
		.left-quote
			line-height 0.5em
			-webkit-animation: whaleAni 5s linear 0s infinite alternate-reverse; /* Chrome, Safari, Opera */
		.right-quote
			line-height 0.2em
			right 0px
			-webkit-animation: whaleAni2 5s linear 0s infinite alternate-reverse; /* Chrome, Safari, Opera */

@-webkit-keyframes whaleAni {
    0%   {line-height:0.4em; left: -10px}
    25% {line-height:0.5em;}
    50% {line-height:0.6em; left: 0px }
    75% {line-height:0.5em;}
    100% {line-height:0.4em; left: 10px}
}

@-webkit-keyframes whaleAni2 {
    0%   {line-height:0.1em; right: -10px}
    25% {line-height:0.2em;}
    50% {line-height:0.3em; right: 0px }
    75% {line-height:0.2em;}
    100% {line-height:0.1em; right: 10px}
}


.testimonial-face
	margin 0 auto

#ling-testimonial
	.testimonial-face
		background: url("../images/testimonials/Brett.png"); 
		background-size: cover
		background-position: center
		background-repeat: no-repeat
		height: 180px
		width: 180px
		overflow: hidden



@media screen and (max-width: 400px)
	.half
		width 100%
		display block
	.arabic
		&.left
			font-size 1em
			line-height 1.8em
	.right
		padding 0 8px
	.left
		padding 0 8px
	.vertal-center
		padding-top 10px
	.flex-container
		flex-direction column
	/*testimonials*/
	.testimonial-container
		flex-direction row